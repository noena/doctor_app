<div>

  <% if user_signed_in? %>
  <h1>Doctors' Complete List</h1>
      <table>
        <tr>
          <th>Username</th>
          <th>Address</th>
          <th>Gender</th>
        </tr>
        <% @doctors.each do |doctor| %>
        <tr>
          <td><%= doctor.username %></td>
          <td><%= doctor.address %></td>
          <td><%= doctor.gender %></td>
          <td>
          <%= link_to("Show", '#') %>
          <%= link_to("Edit", '#') %>
          <%= link_to("Delete", '#', method: :delete) %>
          </td>
        </tr>
        <% end %>
      </table>
  <% else %>
  <h1>List of Doctors</h1>
      <table>
        <tr>
          <th>Current Title</th>
          <th>Username</th>
        </tr>
        <% @doctors.each do |doctor| %>
        <tr>
          <td>Dr.</td>
          <td><%= doctor.username %></td>
        </tr>
        <% end %>
      </table>
  <% end %>


</div>
